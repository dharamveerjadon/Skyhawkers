<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <View
                android:id="@+id/view_bar"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.skyhawk.customview.SkyhawkTextView
                        style="@style/AppTheme.TextView"
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:text="Full Stack Developer "
                        android:textSize="16sp"
                        app:appFont="Poppins-SemiBold"
                        android:textColor="@android:color/black"/>

                    <com.skyhawk.customview.SkyhawkTextView
                        style="@style/AppTheme.TextView"
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_gravity="end"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_10"
                        app:appFont="Poppins-Regular"
                        android:textColor="@android:color/black"
                        android:drawableLeft="@drawable/ic_date_orange"
                        tools:text="4th May 2021, 5:00pm" />
                </LinearLayout>

                <com.skyhawk.customview.SkyhawkTextView
                    style="@style/AppTheme.TextView"
                    android:id="@+id/txt_job_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:textSize="@dimen/text_size_micro"
                    app:appFont="Poppins-Regular"
                    android:drawableRight="@drawable/ic_forward_arrow_orange"
                    android:drawableLeft="@drawable/ic_access_time_orange"
                    tools:text="Full Time" />

                <com.skyhawk.customview.TagView
                    android:id="@+id/tag_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray"
                    android:orientation="horizontal">

                    <com.skyhawk.customview.SkyhawkTextView
                        style="@style/AppTheme.TextView"
                        android:id="@+id/txt_year_of_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:drawableStart="@drawable/ic_experience"
                        android:padding="2dp"
                        android:drawablePadding="4dp"
                        android:textColor="@android:color/black"
                        android:text="10 yrs experience"
                        android:textSize="@dimen/text_size_micro"
                        app:appFont="Poppins-Regular" />

                    <com.skyhawk.customview.SkyhawkTextView
                        style="@style/AppTheme.TextView"
                        android:id="@+id/txt_tentative_budget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_small"
                        app:appFont="Poppins-Regular"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        tools:text="30" />

                    <com.skyhawk.customview.SkyhawkTextView
                        style="@style/AppTheme.TextView"
                        android:id="@+id/txt_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLines="1"
                        android:drawablePadding="2dp"
                        android:textSize="@dimen/text_size_micro"
                        app:appFont="Poppins-Regular"
                        android:drawableEnd="@drawable/ic_call"
                        android:textColor="@android:color/black"
                        tools:text="Call Us" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
