<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserProfileFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/fab_edit"
        android:src="@drawable/ic_add_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="36dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_skyhawk_profile_orange"
                    app:civ_border_width="2dp" />

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_camera"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <com.skyhawker.customview.SkyhawkTextView
                android:id="@+id/user_name"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="4dp"
                app:appFont="Poppins-Bold"
                android:textFontWeight="700"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                tools:text="David louis" />

            <com.skyhawker.customview.SkyhawkTextView
                android:id="@+id/txt_location"
                style="@style/AppTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:appFont="Poppins-Regular"
                android:drawableLeft="@drawable/ic_location"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:text="Bangalore, India" />

            <com.skyhawker.customview.SkyhawkTextView
                android:id="@+id/txt_mobile_number"
                style="@style/AppTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                app:appFont="Poppins-Regular"
                android:drawableLeft="@drawable/ic_phone"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:text="Bangalore, India" />


            <com.skyhawker.customview.SkyhawkTextView
                android:id="@+id/txt_email"
                style="@style/AppTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_email"
                android:gravity="center"
                android:padding="4dp"
                app:appFont="Poppins-Regular"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:text="dharamveerjadon@gmail.com" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.skyhawker.customview.SkyhawkTextView
                        android:id="@+id/txt_price_per_hour"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="4dp"
                        app:appFont="Poppins-SemiBold"
                        android:textFontWeight="600"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        tools:text="$200" />


                    <com.skyhawker.customview.SkyhawkTextView
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="4dp"
                        app:appFont="Poppins-Regular"
                        android:text="Price Per Hour"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.skyhawker.customview.SkyhawkTextView
                        android:id="@+id/txt_expected_salary"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:appFont="Poppins-SemiBold"
                        android:textFontWeight="600"
                        tools:text="$200" />


                    <com.skyhawker.customview.SkyhawkTextView
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Expected Salary"
                        app:appFont="Poppins-Regular"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.skyhawker.customview.SkyhawkTextView
                        android:id="@+id/txt_year_of_experience"
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:appFont="Poppins-SemiBold"
                        android:textFontWeight="600"
                        tools:text="8" />


                    <com.skyhawker.customview.SkyhawkTextView
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="4dp"
                        app:appFont="Poppins-Regular"
                        android:text="Year Of Experience"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">

                <com.skyhawker.customview.SkyhawkTextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Skype ID"
                    app:appFont="Poppins-Regular"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


                <com.skyhawker.customview.SkyhawkTextView
                    android:id="@+id/txt_skype_id"
                    style="@style/AppTheme.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:appFont="Poppins-SemiBold"
                    android:textFontWeight="600"
                    tools:text="Year Of Experience" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">

                <com.skyhawker.customview.SkyhawkTextView
                    style="@style/AppTheme.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Linkedin ID"
                    app:appFont="Poppins-Regular"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


                <com.skyhawker.customview.SkyhawkTextView
                    android:id="@+id/txt_linkedIn"
                    style="@style/AppTheme.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:appFont="Poppins-SemiBold"
                    android:textFontWeight="600"
                    tools:text="Year Of Experience" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:orientation="vertical">

                    <com.skyhawker.customview.SkyhawkTextView
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Skills"
                        app:appFont="Poppins-Regular"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/lnr_skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img_resume"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_document"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.skyhawker.customview.SpinnerView
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:visibility="invisible" />
</RelativeLayout>